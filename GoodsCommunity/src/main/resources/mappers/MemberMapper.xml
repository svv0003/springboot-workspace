<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.thejoeun.goodscommunity.member.model.mapper.MemberMapper">

    <!--
    resultMap  : 수동으로 변수명 매칭 세팅한다.
    resultType : 자동으로 매칭 세팅한다.
    -->

    <select id="getMemberByEmail" resultType="Member">
        SELECT *
        FROM member
        WHERE member_email = #{memberEmail}
    </select>

    <insert id="saveMember" parameterType="Member">
        INSERT INTO member (member_name, member_email, member_passowrd)
        VALUES (#{memberName}, #{memberEmail}, #{memberPassword})
    </insert>

</mapper>
